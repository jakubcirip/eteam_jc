{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2015", "es2017", "esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules/**/*"],
  "include": ["src/**/*"]
}
